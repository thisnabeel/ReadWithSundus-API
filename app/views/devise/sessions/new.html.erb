<div class="min-h-screen flex items-center justify-center bg-beige-50">
  <div class="p-6 w-full max-w-4xl">

    <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-6">
      <div class="flex-1 md:flex-grow-0 mt-16">
        <h1 class="text-5xl font-bold text-gray-800 leading-tight">Sign In</h1>
      </div>
      <div class="flex-1 md:flex-grow">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-4">
              <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-4 flex items-center">
                <%= f.check_box :remember_me, class: "mr-2 h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
                <%= f.label :remember_me, class: "text-sm text-gray-600" %>
              </div>
            <% end %>

            <div class="flex items-center justify-center">
              <%= f.submit "Sign In", class: "w-full bg-purple-600 text-white py-3 px-4 rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 shadow-md" %>
            </div>
          <% end %>

          <div class="mt-6 text-center">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-gray-600 hover:underline" %>
          </div>

          <div class="mt-2 text-center">
            <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-sm text-gray-600 hover:underline" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>