<%= form_with(model: student, class: "contents") do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul class="list-disc ml-6">
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": student.errors[:first_name].none?, "border-red-400 focus:outline-red-600": student.errors[:first_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": student.errors[:last_name].none?, "border-red-400 focus:outline-red-600": student.errors[:last_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :guardian_id %>
    <%= form.number_field :guardian_id, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": student.errors[:guardian_id].none?, "border-red-400 focus:outline-red-600": student.errors[:guardian_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :birthday %>
    <%= form.date_field :birthday, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": student.errors[:birthday].none?, "border-red-400 focus:outline-red-600": student.errors[:birthday].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
